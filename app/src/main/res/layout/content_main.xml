<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dagang2"
    android:paddingTop="25dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kelique.chatlatian.uripuruppo.aktifitas.MainActivity"
    tools:showIn="@layout/app_bar_main">

<LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTambahpsrt"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_tambangbakul"
                android:gravity="bottom|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:text="TAMBAH ANGGOTA"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnEcash"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_ekash"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="CICIL: ECASH"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <Button
                android:id="@+id/btnObrol"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_obroldu"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="OBROLAN"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLiatpserta"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_tranantar"
                android:gravity="bottom|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="TRANSAKSI"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnBukatbank"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_tbanks"
                android:gravity="bottom|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="CICIL: TBANK"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_krmawan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="KIRIM DATA"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>