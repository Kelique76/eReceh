<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp"


    >

    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wijetkuning">

        <!--TODO: #4 Tarik data yang diupload via tambahAktivity yg dibutuhkan saja sesuai dengan apa lang di Layout-->
        <!--TODO: #6 Buatin search Quaery diatas menu (dengan menu item gambar kontobimo)-->
        <!--TODO: #7 Tampilkan data pedagang hanya sesuai dengan user masing-masing-->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/beachimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="5dp"
            android:src="@drawable/urup"
            app:civ_border_color="#e1d6d6"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/txtBgHslAngka"
            android:layout_below="@+id/beachimage"
            android:layout_toLeftOf="@+id/txtModalAngka"
            android:layout_toStartOf="@+id/txtModalAngka"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="name"
            android:textColor="#ef1313"/>

        <TextView
            android:id="@+id/txtAlamat"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_above="@+id/txtModalAngka"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:gravity="fill_vertical"
            android:padding="1dp"
            android:paddingLeft="5dp"
            android:text="Permodalan"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black_overlay"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtAlamatFull"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtModal"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:gravity="fill_vertical"
            android:padding="1dp"
            android:text="aaaallllaaammmaaatttt"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/txtModal"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:gravity="start"
            android:padding="1dp"
            android:text="Alamat Anggota"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black_overlay"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtModalAngka"
            android:layout_width="170dp"
            android:layout_height="15dp"
            android:layout_above="@+id/nameTxt"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:gravity="start"
            android:padding="1dp"
            android:text="1000000"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtBgHasil"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_below="@+id/beachimage"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:padding="1dp"
            android:text="Bagi Hasil"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black_overlay"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtBgHslAngka"
            android:layout_width="170dp"
            android:layout_height="15dp"
            android:layout_below="@+id/txtBgHasil"
            android:layout_toEndOf="@+id/beachimage"
            android:layout_toRightOf="@+id/beachimage"
            android:padding="1dp"
            android:text="200.000"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            />
        <!--TODO: #5 Ganti Progress bar ini dengan Chart yang librarynya: ada disini: -->
        <!--TODO: https://github.com/bmarrdev/android-DecoView-charting-->

        <TextView
            android:id="@+id/txtPeriode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAlamat"
            android:layout_toLeftOf="@+id/txtPeriodeAja"
            android:layout_toStartOf="@+id/txtPeriodeAja"
            android:text="60"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txtPeriodeAja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtPeriode"
            android:layout_alignBottom="@+id/txtPeriode"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text=" dari 60"
            android:textColor="#000"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
